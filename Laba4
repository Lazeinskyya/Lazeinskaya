program project1; 

{$mode objfpc}{$H+} 

uses 
{$IFDEF UNIX}{$IFDEF UseCThreads} 
cthreads, 
{$ENDIF}{$ENDIF} 
Classes 
{ you can add units after this }; 
type 
victor=array[word]of real; 
var 
A:victor; //массив=вектор 
n:integer; 
k:real; 
Procedure Create(var arr:victor); 
var i:integer; 
begin 
for i:=0 to n-1 do 
begin 
write('Vvedite element: '); 
readln(arr[i]); 
end; 
end; 
 procedure Sort(var arr:victor); 
var max,most,j:integer; 
buff:real; 
begin 
for max:=0 to n-2 do  
begin 
most:=max;  
for j:=max+1 to n-1 do 
if arr[j]>arr[most] then  
most:=j; 
buff:=arr[max]; 
arr[max]:=arr[most]; 
arr[most]:=buff; 
end; 

procedure Vivod(arr:victor); 
var i:integer; 
begin 
for i:=0 to n-1 do 
write (arr[i]:-6:2,' ');  
writeln 
end; 
function BSearch(arr:victor;key:real):integer; 
var left,right,mid:integer; 
begin 
left:=0; 
right:=n-1; 
while left<=right do 
begin 
mid:=left+(right-left) div 2; 
if key>arr[mid] then right:=mid-1
else 
if key<arr[mid] then left:=mid+1 
else 
begin 
BSearch:=mid; 
exit; 
end; 
end; 
BSearch:=-1; 
end; 
begin 
readln(n); 
create(A); 
Vivod(A); 
Sort(A); 
Vivod(A); 
write('Vvedite nuzniy element'); 
readln(k); 
if (BSearch(A, k) = - 1 ) then 
writeln('Ne nayden') 
else 
writeln('Nomer nuznogo elementa: ',BSearch(A, k)); 
readln; 
end.
